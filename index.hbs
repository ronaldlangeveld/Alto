{{!< default}} <div class="content-area" style="padding-top: -60px !important;">
    <main class="site-main">
        <div class="post-feed">
            {{#page}}
            {{#match @page.show_title_and_feature_image}}
            <header class="article-header gh-canvas">
                <h1 style="text-align:center;" class="page-title">{{title}}</h1>
            </header>
            {{/match}}
            <div style="margin-bottom:50px;" class="gh-content gh-canvas">
                {{content}}
            </div>
            {{/page}}
            {{#foreach posts}}
            <div>
                <article class="post">
                    {{#if feature_image}}
                    <figure class="kg-card kg-image-card kg-width-full kg-card-hascaption">
                        <div class="u-placeholder horizontal kg-width-full">
                            <a class="post-image-link" href="{{url}}">
                                <img class="post-image u-object-fit" srcset="{{img_url feature_image size=" xl"}} 1140w,
                                    {{img_url feature_image size="xxl" }} 1920w" sizes="(min-width: 960px) 1140px, 92vw"
                                    src="{{img_url feature_image size=" xl"}}" alt="{{title}}" loading="lazy">
                            </a>
                        </div>
                        <figcaption>
                            <div class="post-meta">
                                {{#has visibility="members"}}
                                <span class="post-meta-item post-meta-length">ðŸ”’ MEMBERS ONLY</span>
                                {{/has}}
                                <span class="post-meta-item post-meta-date">
                                    <time datetime="{{date format=" YYYY-MM-DD"}}">{{date published_at}}</time>
                                </span>
                            </div>
                            <a href="{{url}}">
                                <h3>{{title}}</h3>
                            </a>
                            <div>
                                {{feature_image_caption}}
                            </div>
                        </figcaption>
                    </figure>
                    {{/if}}
                </article>
            </div>
            {{/foreach}}
        </div>
    </main>
    </div>