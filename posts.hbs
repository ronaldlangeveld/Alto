{{!< default}}

<div class="content-area">
    <main class="site-main">
        <div class="post-feed">
            {{#page}}
            <header class="article-header gh-canvas">
                <h1 class="page-title">{{title}}</h1>
            </header>
            <div class="gh-content gh-canvas">
                {{content}}
            </div>
            {{/page}}
            {{#foreach posts}}
            <article style="margin-top: 30px; margin-bottom:0px;" class="{{post_class}}{{#unless feature_image}} no-image{{/unless}}">
                <div class="gh-canvas">
                    <header class="post-header">
                        <h2 class="post-title">
                            <a class="post-title-link" href="{{url}}">{{title}}</a>
                        </h2>
                        <div class="post-meta">
                            {{#has visibility="members"}}
                            <span class="post-meta-item post-meta-length">ðŸ”’ MEMBERS ONLY</span>
                            {{/has}}
                            <span class="post-meta-item post-meta-date">
                                <time datetime="{{date format=" YYYY-MM-DD"}}"><strong style="color: rgb(61, 61, 61);">{{date published_at}}</strong></time>
                            </span>
                            {{#if @site.comments_enabled}}
                            {{comment_count class="post-meta-item"}}
                            {{/if}}
                        </div>
                    </header>
                </div>

            </article>
            {{/foreach}}
        </div>
    </main>
    </div>